# i3status configuration file

general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "disk /"
order += "battery 0"
order += "run_command power_menu"

disk "/" {
    format = "Disk: %avail"
}

battery 0 {
    format = "%status %percentage"
    last_full_capacity = true
    integer_battery_capacity = true
}

run_command power_menu {
    command = "~/scripts/power_menu.sh"
    format = "ðŸ”Œ"
    interval = 3600
}
